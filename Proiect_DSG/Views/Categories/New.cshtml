
@{
    ViewBag.Title = "New";
}

<h2>Creare Categorie</h2>

<form method="post" action="/Categories/New">

    @Html.Label("CategoryName", "Nume Categorie")
    <br />
    @Html.TextBox("CategoryName", null, new { @class = "form-control" })
    <br /><br />

    @Html.Label("CategoryDescription", "Descriere Categorie")
    <br />
    @Html.TextArea("CategoryDescription", null, new { @class = "form-control" })
    <br /><br />

    <button type="submit">Adauga Categorie</button>
</form>