@model Proiect_DSG.Models.Group

@{
    ViewBag.Title = "New";
}

<h2>Creare Grup</h2>

<form method="post" action="/Groups/New">

    @Html.Label("GroupName", "Nume Grup")
    <br />
    @Html.TextBox("GroupName", null, new { @class = "form-control" })
    
    @Html.ValidationMessage("GroupName", "Numele grupului este obligatoriu", new { @class = "text-danger " })
    <br /><br />

    @Html.Label("GroupDescription", "Descriere Grup")
    <br />
    @Html.TextArea("GroupDescription", null, new { @class = "form-control" })
    <br /><br />

    @Html.Label("CategoryId", "Selectati categoria")
    <br />
    @Html.DropDownListFor(m=>m.CategoryId, new SelectList(Model.Categories,
    "Value", "Text"), "Selectati categoria", new { @class="form-control" })
    @Html.ValidationMessage("CategorypId", "Categoria este obligatorie", new { @class = "text-danger " })

    <br/>
    <button type="submit">Adauga Grup</button>
</form>